# Server Configuration
PORT=3000

# React App Configuration
REACT_APP_PORT=3000
REACT_APP_API_URL=http://localhost:5001

# GitHub Configuration 
REACT_APP_GITHUB_CLIENT_ID=your-github-client-id
REACT_APP_GITHUB_REDIRECT_URI=http://localhost:3000/oauth-callback

# Disclaimer
REACT_APP_DISCLAIMER="This is an unofficial GitHub OctoFlow application. Not affiliated with GitHub, Inc."

# Node Environment
NODE_ENV=development

# Performance Monitoring Configuration
REACT_APP_PERFORMANCE_SAMPLE_RATE=1.0
REACT_APP_PERFORMANCE_SLOW_THRESHOLD=16
REACT_APP_PERFORMANCE_MAX_METRICS=1000
REACT_APP_PERFORMANCE_ENABLE_MEMORY_TRACKING=true
REACT_APP_PERFORMANCE_ENABLE_INTERACTION_TRACKING=true

# API Configuration
REACT_APP_API_BASE_URL=/api
REACT_APP_API_TIMEOUT=5000
REACT_APP_API_KEY=your-api-key-here
ALLOWED_ORIGINS=http://localhost:3000

# Logging Configuration
REACT_APP_LOG_LEVEL=info
REACT_APP_ENABLE_PERFORMANCE_LOGGING=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password
REDIS_TLS_ENABLED=true
REDIS_CLUSTER_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Monitoring Configuration
PROMETHEUS_METRICS_PATH=/api/performance/metrics/prometheus
GRAFANA_ADMIN_USER=your-grafana-admin-username
GRAFANA_ADMIN_PASSWORD=your-strong-grafana-password

# GitHub Configuration
# DO NOT add your token here - use environment variables instead
# For development, you can use a GitHub Personal Access Token with minimal scopes
# For production, implement a proper OAuth flow with PKCE
GITHUB_TOKEN=your_github_token_here
REPO_OWNER=
REPO_NAME=

# SECURITY WARNING:
# Never commit this file with real credentials
# This is just a template - copy to .env and add your values
# Make sure .env is in your .gitignore file

# Port for the server to listen on
PORT=3000

# Log level (error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Cache TTL in seconds (default: 300 seconds = 5 minutes)
CACHE_TTL=300

# Rate limiting (requests per minute)
RATE_LIMIT=60

# Enable/disable GitHub Actions integration (true/false)
ENABLE_GITHUB_ACTIONS=true

# Enable/disable enhanced AI recommendations (true/false)
ENABLE_AI_RECOMMENDATIONS=true

# CORS allowed origins (comma-separated list)
# Example: http://localhost:3000,https://example.com
CORS_ALLOWED_ORIGINS=http://localhost:3000

# JWT Secret for authentication (if implementing auth)
# JWT_SECRET=your_jwt_secret_here 